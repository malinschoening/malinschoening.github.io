<script is:inline>
    document.addEventListener("DOMContentLoaded", () => {
        const header1 = document.getElementById("header1");
        const header2 = document.getElementById("header2");

        window.addEventListener("scroll", () => {
            const scrollAmount = window.scrollY;

            const moveFactor = 3;

            header1.style.transform = `translateX(-${scrollAmount * moveFactor}px)`;
            header2.style.transform = `translateX(${scrollAmount * moveFactor}px)`;
        });
    });
</script>

<section class="container-fluid hero d-flex align-items-center fade-in-lazy">
    <div class="headlines mx-auto">
        <h1 class="scroll-text" id="header1">MALIN SCHOENING</h1>
        <h2 class="scroll-text" id="header2">I design and develop websites.</h2> 
    </div>
</section>

<style>
    .hero {
        min-height: 80vh;
    }
    .scroll-text {
        transition: transform 0.1s linear;
        will-change: transform;
    }
    h1 {
        font-family: var(--font-big);
        font-size: 10vw; /* Adjust these values as needed */
        white-space: nowrap;
        line-height: 60%;
        letter-spacing: -2px;
    }
</style>
